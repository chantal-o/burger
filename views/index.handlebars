<div class="header-container">
    <header>Eat Da Burger</header>
    <h1>Burger App</h1>
</div>

<div class="main-container">
    <section id="available-hamburgers">
        <ul id="burger-list"></ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="available-burger">
            <span class="burgers">
                {{this.id}}
                {{this.burger_name}}
            </span>
            <span id="devour-button">
                {{!-- <form action="/test/" {{this.id}} ?_method=PUT" method="POST"> --}}
                    <form class="create-update-form" action="/" method="PUT">
                        <input type="hidden" name="devoured" value={{this.id}}>
                        <button class="devour-button" type="submit">Devour it OR SOMETHING!</button>
                    </form>

                    
            </span>
        </li>
        {{/unless}}
        {{/each}}
        </ul>
    </section>
    <section id="devoured-hamburgers">
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="devour-burger">
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </section>
    <section id="new-burger">
        <form class="create-update-form" actions="/" method="POST">

            <div class="form-group">
                <textarea id="new-burger-text" rows="4" name="burger_name"></textarea>
            </div>

            <button type="submit" id="new-burger-submit">Submit</button>
        </form>

        <p>Enter a burger you want to eat. Click the "Submit" button.</p>

    </section>
</div>